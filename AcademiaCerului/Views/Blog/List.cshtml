
@model AcademiaCerului.Models.ListViewModel

@{
    ViewBag.Title = "List";
}
<p>
    AM RAMAS LA:
    Paginare
</p>

<div id="content">
    <h1>@ViewBag.Title</h1>

    @Html.Partial("_Pager", Model)

    @if (Model.Posts.Count > 0)
    {
        foreach (var post in Model.Posts)
        {
            Html.Partial("_PostTemplate", post);
        }
    }
    else
    {
        <p>Nu exista postari</p>
    }

    @Html.Partial("_Pager", Model)
</div>

