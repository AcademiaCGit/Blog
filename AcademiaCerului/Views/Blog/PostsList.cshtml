@model AcademiaCerului.Models.ListViewModel

<div id="content">
    <div class="col-md-10">
        <h1>@ViewBag.Title</h1>

        @if (Model.Posts.Count > 0)
        {
            foreach (var post in Model.Posts)
            {
                @Html.Partial("_PostTemplate", post);
            }
        }
        else
        {
            <p>Nu exista postari</p>
        }

        @Html.Partial("_Pager", Model)
    </div>

    <div class="col-md-2">
        @Html.Action("Sidebars")
    </div>
</div>