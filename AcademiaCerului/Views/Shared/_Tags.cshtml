@model IList<AcademiaCerului.Core.Objects.Tag>

<div class="tag-sidebar">
    <h3>Etichete</h3>

    @if (Model.Count() > 0)
    {
        <ul>
            @foreach (var tag in Model)
            {
                <li>@Html.TagLink(tag)</li>
            }
        </ul>
    }
    else
    {
        <p>Nici o etichetă găsită !</p>
    }
</div>
