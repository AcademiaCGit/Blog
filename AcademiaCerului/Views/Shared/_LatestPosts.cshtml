@model IList<AcademiaCerului.Core.Objects.Post>

<div class="post-sidebar">
    <h3>Cele mai recente postări</h3>

    @if (Model.Count() > 0)
    {
        <ul>
            @foreach (var post in Model)
            {
                <li>@Html.PostLink(post)</li>
            }
        </ul>
    }
    else
    {
        <p>Nici o postare găsită !</p>
    }
</div>

