@model AcademiaCerului.Models.ListViewModel
@using (Html.BeginForm(
                "GetPostsBySearch",
                "Blog",
                FormMethod.Post,
                new { id = "search-form", @class = "navbar-form navbar-right", @role = "search" }))
{
    <form class="navbar-form navbar-right" role="search">
        <div class="form-group">
            @Html.TextBoxFor(m => m.Search, new { id = "searchTextBox", @class = "form-control", @placeholder = "Cautare" })
        </div>
        <button type="submit" class="btn btn-default">Cauta</button>
    </form>
}
