@using (Html.BeginForm(
                "GetPostsBySearch",
                "Blog",
                FormMethod.Get,
                new { id = "search-form", @class = "navbar-form navbar-right", @role = "search" }))
{
    <form class="navbar-form navbar-right" role="search">
        <div class="form-group">
            @Html.TextBox("search", null, new { @class = "form-control", @placeholder = "Cautare" })
        </div>
            <button type="submit" class="btn btn-default">Caută</button>
    </form>
}
