@model AcademiaCerului.Core.Objects.Post

<div id="disqus_thread"></div>
<script>
    var disqus_config = function () {
        this.page.url = '@string.Format("http://{0}.ro{1}", System.Configuration.ConfigurationManager.AppSettings["AcademiaCerului"], Model.Href(Url))';
        this.page.identifier = '@Model.Href(Url)';
    };

    (function () {
        var d = document, s = d.createElement('script');
        s.src = 'https://academiacerului.disqus.com/embed.js';
        s.setAttribute('data-timestamp', +new Date());
        (d.head || d.body).appendChild(s);
    })();
</script>
