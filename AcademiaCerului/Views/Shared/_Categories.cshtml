@model IList<AcademiaCerului.Core.Objects.Category>

<div class="sidebar">
    <h3>Categorii</h3>

    @if (Model.Count() > 0)
    {
        <ul>
            @foreach (var category in Model)
            {
                <li>@Html.CategoryLink(category)</li>
            }
        </ul>
    }
    else
    {
        <p>Nici o categorie găsită !</p>
    }
</div>
